@{
    Layout = "_Layout";
}
@model SchoolManagement.Models.Subject

<h2>Add Subject</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Class"></label>
        <select asp-for="Class" class="form-control" asp-items="ViewBag.Classes"></select>
        <span asp-validation-for="Class" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Languages"></label>
        <input asp-for="Languages" class="form-control" placeholder="e.g., English, Hindi" />
        <span asp-validation-for="Languages" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
