@{
    Layout = "_Layout";
}
@model SchoolManagement.Models.TeacherSubjectRequestDTO

<h2>Assign Teacher to Subject</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="TeacherId"></label>
        <div class="col-md-10">
            @Html.DropDownList("TeacherId", (SelectList)ViewData["Teachers"], htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TeacherId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label asp-for="SubjectId"></label>
        <div class="col-md-10">
            @Html.DropDownList("SubjectId", (SelectList)ViewData["Subjects"], htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SubjectId, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
