@{
    Layout = "_Layout";
}
@model Student

<h2>Add Student</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Sex">Gender</label>
        <select asp-for="Sex" class="form-control" asp-items="ViewBag.Genders"></select>
        <span asp-validation-for="Sex" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control" type="file" name="imageUpload" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
   @*  <div class="form-group">
        <label asp-for="Class"></label>
        <input asp-for="Class" class="form-control" />
    </div> *@
    <div class="form-group">
        <label asp-for="Class"></label>
        <select asp-for="Class" class="form-control" asp-items="ViewBag.Classes"></select>

        <span asp-validation-for="Class" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RollNumber"></label>
        <input asp-for="RollNumber" class="form-control" />
        <span asp-validation-for="RollNumber" class="text-danger"></span>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
