@{
    Layout = "_Layout";
}
@model IEnumerable<SchoolManagement.Models.Subject>

<div class="d-sm-flex align-items-center justify-content-between mb-3 mt-3">
    <h1 class="h3 mb-0 text-gray-800">Subjects</h1>
    <div class="p-2 flex-filltext-right">
        <a asp-controller="Subjects" asp-action="Create" class="btn btn-success mb-2">Create</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Class</th>
            <th>Languages</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)
        {
            <tr>
                <td>@subject.Name</td>
                <td>@subject.Class</td>
                <td>@string.Join(", ", subject.Languages)</td>
            </tr>
        }
    </tbody>
</table>
